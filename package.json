    "main": "build/index.js",
    "types": "build/index.d.ts",
    "peerDependencies": {
        "d2": "^31",
        "react": "^16",
        "react-dom": "^16"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.3.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
        "@babel/preset-env": "^7.3.1",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.1.0",
        "@types/enzyme": "^3.1.17",
        "@types/jest": "^24.0.3",
        "@typescript-eslint/parser": "^1.3.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^23.4.2",
        "chokidar": "^2.1.1",
        "enzyme": "^3.8.0",
        "enzyme-adapter-react-16": "^1.9.1",
        "enzyme-to-json": "^3.3.5",
        "eslint": "^5.13.0",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.12.4",
        "jest": "^23",
        "loglevel": "^1.6.1",
        "prettier": "1.16.4",
        "prop-types": "^15.6.0",
        "react": "^16.6.0",
        "react-dom": "^16.6.0",
        "ts-jest": "^23.10.5",
        "typescript": "^3.3.3"
    },
    "dependencies": {
        "@date-io/moment": "^1.0.2",
        "@dhis2/d2-ui-core": "^1.3.5",
        "@dhis2/d2-ui-group-editor": "^5.1.1",
        "@material-ui/core": "^3.9.1",
        "material-ui-pickers": "^2.1.2",
        "moment": "^2.22.2"
    },
    "scripts": {
        "build-only": "yarn build-css && babel src/ --out-dir build --extensions \".js,.jsx,.ts,.tsx\"",
        "build-css": "cd src && cp -a --parents **/*.css ../build",
        "build": "yarn code-quality && rm -rf build/* && yarn run build-only && tsc --outDir build",
        "build-dev": "yarn run build-only --watch",
        "code-quality": "yarn lint && yarn prettify && yarn test",
        "lint": "eslint src src/ --ext .js,.ts,.jsx,.tsx",
        "prettify": "prettier src/*.ts src/**/*.{js,jsx,json,css,ts,tsx} --write",
        "test": "jest"
    }
}
