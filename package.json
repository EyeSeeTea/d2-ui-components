    "repository": {
        "type": "git",
        "url": "git+https://github.com/eyeseetea/d2-ui-components.git"
    },
    "version": "1.1.0-beta.2",
    "main": "index.js",
    "types": "index.d.ts",
    "peerDependencies": {
        "d2": "^31",
        "react": "^16",
        "react-dom": "^16"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.0",
        "@babel/core": "^7.7.0",
        "@babel/plugin-proposal-class-properties": "^7.3.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
        "@babel/preset-env": "^7.3.1",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.7.0",
        "@dhis2/d2-i18n-extract": "^1.0.7",
        "@dhis2/d2-i18n-generate": "^1.0.18",
        "@types/enzyme": "^3.1.17",
        "@types/jest": "^24.0.3",
        "@types/lodash": "^4.14.144",
        "@typescript-eslint/eslint-plugin": "^2.6.1",
        "@typescript-eslint/parser": "^2.6.1",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10",
        "babel-jest": "^24.9.0",
        "chokidar": "^3.3.0",
        "enzyme": "^3.8.0",
        "enzyme-adapter-react-16": "^1.9.1",
        "enzyme-to-json": "^3.3.5",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-config-react-app": "^5.0.2",
        "eslint-plugin-cypress": "^2.2.0",
        "eslint-plugin-flowtype": "^4.x",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jsx-a11y": "^6.2.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.12.4",
        "eslint-plugin-react-hooks": "^2.2.0",
        "jest": "^24",
        "loglevel": "^1.6.1",
        "prettier": "1.18.2",
        "prop-types": "^15.6.0",
        "react": "^16.8.15",
        "react-dom": "^16.8.15",
        "ts-jest": "^24.1.0",
        "typescript": "^3.6.3"
    },
    "dependencies": {
        "@date-io/core": "^1.3.6",
        "@date-io/moment": "^1.0.2",
        "@dhis2/d2-i18n": "^1.0.3",
        "@dhis2/d2-ui-core": "6.3.0",
        "@material-ui/core": "^4.6.0",
        "@material-ui/icons": "^4.5.1",
        "@material-ui/pickers": "^3.2.7",
        "classnames": "^2.2.6",
        "lodash": "^4.17.11",
        "moment": "^2.22.2",
        "nano-memoize": "^1.1.5",
        "node-sass": "^4.12.0",
        "throttle-debounce": "^2.1.0"
    },
    "scripts": {
        "build-only": "mkdir -p build && yarn build-base && yarn build-css && yarn localize && yarn build-locales && cp package.json build/ && yarn build-babel && yarn build-tsc",
        "build-base": "cp README.md LICENSE build/",
        "build-tsc": "tsc --outDir build",
        "build-babel": "babel src/ --out-dir build --extensions \".js,.jsx,.ts,.tsx\"",
        "build-locales": "mkdir -p build/locales && cp -a src/locales/* build/locales",
        "build-css": "cd src && cp -a --parents **/*.css **/*.scss ../build",
        "build": "yarn code-quality && rm -rf build/* && yarn build-only",
        "build-dev": "yarn build-only --watch --verbose",
        "code-quality": "yarn lint && yarn prettify && yarn test",
        "extract-pot": "d2-i18n-extract -p src/ -o i18n/",
        "lint": "eslint src src/ --ext .js,.jsx,.ts,.tsx",
        "localize": "yarn extract-pot && yarn update-po && yarn localize-update",
        "localize-update": "d2-i18n-generate -n d2-ui-components -p ./i18n/ -o ./src/locales/",
        "update-po": "for pofile in i18n/*.po; do msgmerge --backup=off -U $pofile i18n/en.pot; done",
        "prettify": "prettier src/*.ts src/**/*.{js,jsx,json,css,ts,tsx} --write",
        "test": "jest"
    }
}
